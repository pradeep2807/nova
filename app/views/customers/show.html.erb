<%- model_class = Customer -%>
<div class="page-header">
<h3><%= @customer.name %></h3>
<h3><small>Organization - <%= tenant_name @customer.tenant_id %></small></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @customer.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dob) %>:</strong></dt>
  <dd><%= @customer.dob %></dd>
  <dt><strong><%= model_class.human_attribute_name(:building) %>:</strong></dt>
  <dd><%= @customer.building %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subarea) %>:</strong></dt>
  <dd><%= @customer.subarea %></dd>
  <dt><strong><%= model_class.human_attribute_name(:locality) %>:</strong></dt>
  <dd><%= @customer.locality %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pin) %>:</strong></dt>
  <dd><%= @customer.pin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emailid) %>:</strong></dt>
  <dd><%= @customer.emailid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobileno) %>:</strong></dt>
  <dd><%= @customer.mobileno %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bg) %>:</strong></dt>
  <dd><%= @customer.bg %></dd>
  <dt><strong><%= model_class.human_attribute_name(:diseases) %>:</strong></dt>
  <dd><%= @customer.diseases %></dd>
  <dt><strong><%= model_class.human_attribute_name(:medicin) %>:</strong></dt>
  <dd><%= @customer.medicin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:allergy) %>:</strong></dt>
  <dd><%= @customer.allergy %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tenant_id) %>:</strong></dt>
  <dd><%= @customer.tenant_id %></dd>
</dl>

<%= link_to' Back to Organization Home', root_path, :class => 'btn btn-default' %>

<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tenant_customer_path(customer: @customer, tenant: @customer.tenant_id), 
                                        :class => 'btn btn-default' %>

<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tenant_customer_path(@customer, @customer.tenant_id),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", 
              :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
