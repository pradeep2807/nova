<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs main-form col-md-offset-4 col-md-4 col-sm-offset-2 col-sm-8 col-xs-offset-2 col-xs-8">
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
      <h3 class="form-title">Sign Up</h3>
      <div class="form-group checkbox-form-label">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Enter Your Email" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: "Enter Your Password" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm Your Above Password" %>
      </div>
      <%= fields_for (:tenant) do |w| %>
          <div class="form-group col-md-12 padding-zero"> 
            <% w.label :name,'organization'%>
            <%= w.text_field :name, required: true, class: "form-control", placeholder: "Unique name for your organization" %>
          </div>
          
      <%end%>
      <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-signin' %>
    <% end %>
  </div>
</div>
