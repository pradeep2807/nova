<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs main-form col-md-offset-2 col-md-8 col-sm-offset-2 col-sm-8 col-xs-offset-2 col-xs-8">
    <h4 class="edit-profile-labels">Edit Your User Profile</h4>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "edit-profile-labels" %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "edit-profile-labels" %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: "edit-profile-labels" %>
        <%= f.password_field :password_confirmation, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :current_password, class: "edit-profile-labels" %>
        <%= f.password_field :current_password, class: 'form-control' %>
      </div>
      <%= f.submit t('.update', default: 'Update'), class: 'btn btn-signin' %>
    <% end %>
  </div>
  <p><%= link_to t('.cancel_my_account', default: 'Delete my Account'), registration_path(resource_name), data: { confirm: t('.are_you_sure', default: "Are you sure?") }, method: :delete %>.</p>
  <%= link_to t('.back', default: 'Back'), :back %>
</div>
